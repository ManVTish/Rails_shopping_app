<div class="container pb-16">
  <h3 class="border-b border-gray-200 font-roboto text-gray-800 pb-3 font-medium">Customer's Review</h3>
  <%= turbo_frame_tag @product do %>
    <div class="w-3/5 pt-6">
      <% if user_signed_in? %>
        <%= link_to "New Review", new_product_review_path(@product.id),
                    class: "btn btn--primary",
                    data: { turbo_frame: dom_id(Review.new) }  %>
      <% else %>
        <%= 'Login to write a review' %>
      <% end %>
    </div>
    <%= render @reviews, data: { turbo_frame: 'review' } %>
  <% end %>
</div>
