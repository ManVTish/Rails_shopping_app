<!-- shop wrapper -->
<div class="container grid md:grid-cols-4 grid-cols-2 gap-6 pt-16 pb-16 items-start">
  <%= render "shared/category_filters" %>

  <!-- products -->
  <div class="col-span-3">
    <%= turbo_frame_tag "products" do %>
      <div class="flex flex-col items-center">
        <% if @products.present? %>
          <div class="grid md:grid-cols-3 grid-cols-2 gap-6">
            <%= render @products %>
          </div>
        <% else %>
          <p class="text-center text-primary font-bold text-lg tracking-wider leading-loose capitalize">No Product found</p>
        <% end %>
       <%== pagy_nav(@pagy) %>
      </div>
    <% end %>
  </div>
  <!-- ./products -->
</div>
<!-- ./shop wrapper -->
