<%= turbo_stream.update dom_id(@product, "reviews") do %>
  <% if @reviews.present? %>
    <div class="grid md:grid-cols-3 grid-cols-2 gap-6">
      <%= render @reviews %>
    </div>
    <%== pagy_nav(@pagy) %>
  <% else %>
    <p class="text-center text-primary font-bold text-lg tracking-wider leading-loose capitalize">No Review found</p>
  <% end %>
<% end %>
